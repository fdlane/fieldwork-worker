 <!-- Modal -->
   <div tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
       <div class="modal-dialog">
           <div class="modal-content">
               <div class="modal-header">
                   <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="text-danger fa fa-times"></i></button>
                   <h4 class="modal-title"><strong>{{jobService.selectedJob.metaId}}</strong></h4>

                   <!-- Camera Button -->
                   <div class="text-center">
                     {{#file-upload name="photos"
                                  accept="image/*"
                                  multiple=false
                                  onfileadd=(action "uploadImage")}}
                                  <a type="button" class="btn btn-primary btn-sm center-block photo-upload-button">
                                     <span class="fa-stack camera-button--add">
                                       <i class="fa fa-camera fa-stack-2x"></i>
                                       <i class="fa fa-plus fa-stack-1x"></i>
                                     </span></a>
                    {{/file-upload}}
                  </div>
               </div>

               <div class="modal-body">
                 <table class="pull-left col-md-8 ">
                     <tbody>
                       <tr>Location: {{jobService.selectedJob.location}}</tr>
                       <tr>Current Status: {{jobService.selectedJob.status}}</tr>
                       <tr></tr>
                       <tr>Contact Info: {{jobService.selectedJob.contactInfo}}</tr>
                       <tr></tr>
                       <tr>Description: {{jobService.selectedJob.description}}</tr>
                     </tbody>
                 </table>

                   <!-- Modal photo -->
                   <div class="col-md-4">
                       <img src="{{jobService.imageUrl}}" width="150px" height="150px">
                   </div>

                   <div class="clearfix"></div>
                   <p class="open_info hide">Something</p>
               </div>

               <!-- Job Status -->
               <div>
                   <button type="button" class="btn btn-secondary btn-lg btn-block" >{{jobService.currentStatus}}</button>
               </div>

               <div class="modal-footer">

                   <!-- Status button -->
                   <button id='statusBtn' type="button" class="btn btn-primary btn-sm center-block" disabled={{if jobService.canChangeStatus false true}} {{action 'changeStatus' job}}>{{jobService.nextStatus}}</button>
               </div>
           </div>
       </div>
   </div>
