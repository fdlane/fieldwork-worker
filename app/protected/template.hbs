{{nav-bar logout="logout"}}
    <div class="container-fluid">
        <div class="row">
            {{search-box}}
        </div>
        <div class="row">
            {{#jobs-table}}
              {{#each model.jobs as |job|}}
                {{#if job.isActive}}
                  {{job-row job=job action="toggleModal"}}
                {{/if}}
              {{/each}}
            {{/jobs-table}}
        </div>
    </div>

        {{#job-details-modal class="modal" metaId=metaId jobImage=jobImage}}
          <tr>Location: {{location}}</tr>
          <tr>Current Status: {{status}}</tr>
          <tr></tr>
          <tr>Contact Info: {{contactInfo}}</tr>
          <tr></tr>
          <tr>Description: {{description}}</tr>
        {{/job-details-modal}}
